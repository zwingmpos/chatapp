<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.splash.Splash">

    <data>
        <variable
            name="viewModel"
            type="com.zwing.chat.ui.splash.SplashVM" />

        <variable
            name="activity"
            type="com.zwing.chat.ui.splash.Splash" />
        
    </data>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/txt_welcome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/base_popins_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="80dp"
            android:text="@string/go"
            android:onClick="@{()->activity.actionGo()}"
            android:background="@drawable/btn_filled"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/base_popins_semibold"/>
    </LinearLayout>

</layout>